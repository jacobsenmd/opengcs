        <name>Screen1</name>
        <icon>art/48x48/video-display-3.png</icon>
        <tooltip>Switch to screen 1</tooltip>
        <widget>
            <type>GCSWidgetMAVNetwork</type>
            <name>MAV Network</name>
            <location>left</location>
        </widget>
         <widget>
            <type>GCSWidgetMap</type>
